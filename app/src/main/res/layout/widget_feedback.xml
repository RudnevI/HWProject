<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/feedback_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_mono_mirror"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/feedback_title_end_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_mono_mirror"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/feedback_title"
        app:layout_constraintEnd_toEndOf="@id/feedback_title"
        app:layout_constraintTop_toTopOf="@id/feedback_title"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedback_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedback_title"
        tools:text="TEST"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>